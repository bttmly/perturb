{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "rootDirs": ["src"],
    "outDir": "built",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": ["es2017"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
